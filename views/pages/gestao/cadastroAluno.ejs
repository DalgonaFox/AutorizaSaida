<!DOCTYPE html>
<html lang="pt-br">
  <%- include('../../partials/head', { title: 'Cadastrar Aluno' }) %>
  <%- include('../../partials/headerGestao') %>

<body>

    <div class="container">
        <div class="card w-75 shadow m-5" style="padding: 40px;">
          <a href="/homeGestao" class="text-dark">
            <h3><i class="bi bi-arrow-left"></i></h3>
          </a>
          <h2 style="font-family: Inter; font-style: italic; text-align: center; margin-bottom: 60px;">Cadastrar Novo Aluno</h2>
          <form action='/cadastroALuno' method="post">

            <div class="d-flex">
                <div class="form-group w-50 mr-4">
                  <label for="data">Nome Completo</label>
                  <div>
                    <input type="text" class="form-control w-100" id="nome_aluno"> </input>
                  </div>
                </div>
                  <div class="form-group w-25 mr-4">
                <label for="data">CPF</label>
                <div class="d-flex justify-content-between">
                  <input type="text" class="form-control" id="cpf" >
                </div>
                  </div>
  
                  <div class="form-group w-50">
                <label for="justificativa">Data de Nascimento</label>
                <input type="date" class="form-control w-100" id="data_nasc"> </input>
                  </div>
              </div>
            
          
    
            <div class="d-flex">
              <div class="form-group w-50 mr-4">
                <label for="data">Telefone</label>
                <div>
                  <input type="text" class="form-control w-100" id="tel_aluno"> </input>
                </div>
              </div>
                <div class="form-group w-25 mr-4">
              <label for="data">RM</label>
              <div class="d-flex justify-content-between">
                <input type="text" class="form-control" id="rm" >
              </div>
                </div>

                <div class="form-group w-50">
              <label for="justificativa">Email</label>
              <input type="email" class="form-control w-100" id="email_aluno"> </input>
                </div>
            </div>
    
            
            <div class="d-flex">
                <div class="form-group w-50 mr-4">
                <label for="data">Curso</label>
                <select class="form-select w-100 h-50 text-muted" aria-label="Default select example" id="cod_curso">
                    <option selected>Selecione o Curso</option>
                    <option value="1">Desenvolvimento de Sistemas</option>
                    <option value="2">Logística</option>
                    <option value="3">Eletroeletrônica</option>
                    <option value="4">Eletromecânica</option>
                    <option value="5">Mecânica</option>
                  </select>
              </div>

              <div class="form-group w-50">
                <label for="justificativa">Senha Padrão</label>
                <input type="password" class="form-control w-100" id="senha"> </input>
                  </div>

            </div>

            <div class="d-flex">
              <div class="form-group w-50 mr-4">
                <label for="data">Nome do Responsável</label>
                <div>
                  <input type="text" class="form-control w-100" id="nome_resp">
                </div>
              </div>

              <div class="form-group  w-75 mr-4 ">
                <label for="data">Email do Responsável</label>
                <div>
                  <input type="text" class="form-control w-100" id="email_resp">
                </div>
              </div>

              <div class="form-group w-50 ">
                <label for="data">Telefone do Responsável</label>
                <div>
                  <input type="text" class="form-control w-100" id="tel_resp">
                </div>
              </div>
            </div>
    
            <div class="d-flex justify-content-end">
              <button type="submit" class="btn btn-red btn-lg">Cadastrar Aluno</button>
            </div>
          </form>
        </div>
      </div>

      <%- include('../../partials/footer') %>
</body>