<!--Perfil da Gestão-->

<!DOCTYPE html>
<html lang="pt-br">

<%- include('../../partials/head', { title: 'Perfil' }) %>
<%- include('../../partials/headerGestao', { activePage: 'perfilgestao' }) %>

    <body>
        
<div class="container">
        <div class="card shadow m-5 d-flex justify-content-center align-items-center w-75">
            <div class="d-block justify-content-center">
                <img class="profilePicture mt-4" src="/images/user.png" alt="Foto de Perfil">
            </div>
            <h1 class="nome text-center font-italic font-weight-bold mt-3"><%= nome_gestor %></h1>
            <div class="info">
                <div class="dividir d-flex justify-content-between">
                    <div class="campo">
                        <div class="card pb-2 pt-2 pl-2 pr-5">
                            <label for="formGroupExampleInput" class="form-label font-weight-bold">E-mail</label>
                            <p><%= email_gestor %></p>
                        </div>
                    </div>

                    <div class="campo">
                        <div class="card pb-2 pt-2 pl-2 pr-5">
                            <label for="formGroupExampleInput" class="form-label font-weight-bold">Tipo</label>
                            <p><%= cargo %></p>
                        </div>
                    </div>

                    <div class="campo">
                        <div class="card pb-2 pt-2 pl-2 pr-5">
                            <label for="formGroupExampleInput" class="form-label font-weight-bold">NIF</label>
                            <p><%= nif %></p>
                        </div>
                    </div>

                    <div class="campo">
                        <div class="card pb-2 pt-2 pl-2 pr-5">
                            <label for="formGroupExampleInput" class="form-label font-weight-bold">Telefone</label>
                            <p><%= tel_gestor %></p>
                        </div>
                    </div>

                    <div class="campo">
                        <div class="card pb-2 pt-2 pl-2 pr-5">
                            <label for="formGroupExampleInput" class="form-label font-weight-bold">Gênero</label>
                            <p><%= genero %></p>
                        </div>
                    </div>
                </div>

                <div class="botoes mb-5">
                    <a href="/mudarSenhaGestao" type="button" class="btn btn-red btn-lg">Alterar senha</a>
                    <a href="/sair" type="button" class="btn btn-red btn-lg">Sair da conta</a>
                </div>
            </div>
        </div>
    </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
        <%- include('../../partials/footer') %>
    </body>

</html>