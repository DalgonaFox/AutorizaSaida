<!--Primeiro Acesso-->
<!DOCTYPE html>
<html lang="pt-br">
<%- include('../../partials/head', { title: 'Primeiro Acesso' }) %>
  <%- include('../../partials/headerNull', { activePage: '' }) %>

    <body>
      <% if (senhaMessage) { %>
        <div class="modal fade" id="senhaModal" tabindex="-1" aria-labelledby="senhaModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="senhaModalLabel">Erro</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <%= senhaMessage %>
              </div>
            </div>
          </div>
        </div>
        <!-- Script para exibir o modal automaticamente -->
        <script>
          document.addEventListener("DOMContentLoaded", function () {
            var senhaModal = new bootstrap.Modal(document.getElementById('senhaModal'));
            senhaModal.show();
          });
        </script>
        <% } %>
          <div class="container">
            <div class="card shadow m-5 p-5 w-50 primeiro-acesso">
              <div class="form-container">
                <h2 class="font-italic font-weight-bold"
                  style="font-family: Inter; text-align: center; margin-top: 15px;">
                  Primeiro Acesso
                </h2>
                <p style="font-family: Inter; text-align: center;">Mude sua senha para continuar </p>
                <form method="POST" action="/primeiroacessoGestao" style="width: 100%; padding: 5%; position: center;">
                  <div class="form-group wrapper">
                    <label for="senhaAtual">Senha Atual</label>
                    <input type="password" class="form-control input" id="senhaAtual" name="senhaAtual"
                      placeholder="Insira a senha atual" required>
                  </div>
                  <div class="form-group wrapper">
                    <label for="novaSenha">Nova Senha</label>
                    <input type="password" class="form-control icon" id="novaSenha" name="nova_senha"
                      placeholder="Nova senha" required>
                  </div>
                  <div class="form-group wrapper">
                    <label for="confirmarNovaSenha">Confirmação da Nova Senha</label>
                    <input type="password" class="form-control icon" id="confirmarNovaSenha" name="confirmacaoSenha"
                      placeholder="Digite novamente sua nova senha" required>
                  </div>
                  <div class="justify-content-end d-flex">
                    <button type="submit" class="btn btn-red btn-lg d-flex">Confirmar</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
          <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
          <%- include('../../partials/footer') %>
    </body>

</html>