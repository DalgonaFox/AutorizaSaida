<!DOCTYPE html>
<html lang="pt-br">

<%- include('../../partials/head', { title: 'Cadastrar Curso' }) %>
  <%- include('../../partials/headerGestao') %>

<body>

  <div class="container">
      <div class="card w-75 shadow m-5" style="padding: 40px; min-height: 620px;">
        <a href="/cursos" class="text-dark">
          <h3><i class="bi bi-arrow-left"></i></h3>
        </a>
        <h2 style="font-family: Inter; font-style: italic; text-align: center; margin-bottom: 20px;">Cadastrar Novo Curso</h2>

        <div class="conteudo" style="height: 400px; padding-top: 7%;">
          <form action='/cadastroCurso' method="post">
            
              <div class="d-flex">
                <div class="form-group w-100 mr-4">
                  <label for="data">Nome do Curso</label>
                  <div>
                    <input type="text" class="form-control w-100" id="nome_curso">
                  </div>
                </div>
              </div>

              
              <div class="d-flex" style="padding-top: 40px;">
                <div class="form-group w-50 mr-4">
                  <label for="tipoC">Tipo do Curso</label>
                  <select class="form-select w-100 h-50 text-muted" aria-label="Default select example" id="tipo_curso">
                    <option selected>Selecione o Curso</option>
                    <option value="1">Técnico</option>
                    <option value="2">CAI</option>
                    <option value="3">FIC</option>

                  </select>
                </div>

                <div class="form-group w-50">
                  <label for="turmC">Turno</label>
                  <select class="form-select w-100 h-50 text-muted" aria-label="Default select example" id="turma_curso">
                    <option selected>Selecione a Turma</option>
                    <option value="1">Manhã</option>
                    <option value="2">Tarde</option>
                    <option value="3">Noite</option>
                  </select>
                </div>
              </div>


              <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-red btn-lg" onclick="mostrarSelecionado() ">Cadastrar Curso</button>
              </div>
            
          </form>
        </div>
      </div>
    </div>

    <%- include('../../partials/footer') %>
</body>