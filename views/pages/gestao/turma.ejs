<!--Turma-->

<!DOCTYPE html>
<html lang="pt-br">

<%- include('../../partials/head', { title: 'Turmas' }) %>
  <%- include('../../partials/headerGestao', { activePage: '' }) %>

    <body>
      <!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Cadastrar Turma</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body d-flex flex-column justify-content-center">
        <form action='/cadastroTurma' method="post">

          <div class="d-flex">
            <div class="form-group w-100">
              <label for="data">Código do Curso</label>
              <div>
                <input type="text" class="form-control w-100" name="codCurso" id="codCurso" value="<%= codCurso %>" readonly>

              </div>
            </div>
          </div>

          <div class="d-flex">
            <div class="form-group w-100">
              <label for="data">Nome da Turma</label>
              <div>
                <input type="text" class="form-control w-100 " name="nome_turma" id="nome_turma">
              </div>
            </div>
          </div>
      
      </div>
      <div class="modal-footer">
        <div class="d-flex justify-content-end">
          <button type="submit" class="btn btn-red btn-lg">Cadastrar Curso</button>
        </div>
      </div>
    </form>
    </div>
  </div>
</div>

      <div class="container" style="align-items: start; justify-content: start;">
        <div class="card-container w-100">
          <div class="d-flex align-items-start justify-content-between pt-3 pb-3">
            <h1 class="font-italic font-weight-bold mt-5 mb-5"><%= nome_curso %>
            </h1>
            <!--<a class="btn btn-red btn-lg" href="/cadastroTurma?cod_curso=<%= codCurso %>">Cadastrar Turma</a>-->
            <button type="button" class="btn btn-red btn-lg" data-bs-toggle="modal" data-bs-target="#exampleModal">
              Cadastrar Turma
            </button>
          </div>

          <div class="row justify-content-between w-100">
            <% if (turmas && turmas.length > 0) { %>
            <% turmas.forEach((turma)=> { %>
              <script>console.log("Gerando link para cod_turma:", "<%= turma.cod_turma %>");</script>
              <div class="mb-3" style="width: 428px; height: 375px;">
                <a class="card text-decoration-none" href="/listaAlunos?cod_turma=<%= turma.cod_turma %>">
                  <div class="card">
                    <img class="card-img-top" src="/images/curso.png" alt="Card image cap">
                    <div class="card-body">
                      <h5>
                        <%= turma.nome_turma %>
                      </h5>
                      <p>
                        <%= turma.nome_curso %> - <%= turma.turno %>
                      </p>
                    </div>
                  </div>
                </a>
              </div>
              <% }); %>
              <% } else { %>
                <h2 class="modal-title fs-5" id="exampleModalLabel">Não há turmas cadastradas.</h2>
              <% } %>
          </div>

        </div>

        <!-- Button trigger modal -->

      </div>
      </div>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
      <%- include('../../partials/footer') %>
    </body>

</html>