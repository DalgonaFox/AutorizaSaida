<!--Histórico do aluno-->
<!DOCTYPE html>
<html lang="pt-br">

<%- include('../../partials/head', { title: 'Histórico' }) %>
<%- include('../../partials/headerAluno') %>

  <body>
    <div class="container h-100">

      <div class="card shadow m-5 p-5 d-flex flex-column align-items-center justify-content-center" style="width: 80%">
        <h2 class="font-italic font-weight-bold">Histórico</h2>
        <div class="w-100 d-flex justify-content-between">
          <select class="form-select form-select-sm w-25" style="color: black;">
            <option selected>Ordenar por</option>
            <option value="1">Mais Antigo</option>
            <option value="2">Mais Recente</option>
          </select>
          <select class="form-select form-select-sm w-25" style="color: black;">
            <option selected>Filtrar por</option>
            <option value="1">Saída</option>
            <option value="2">Falta</option>
            <option value="3">Data</option>
            <option value="4">Justificativa</option>
          </select>
        </div>
        <table>
          <thead>
            <tr>
              <th>Data</th>
              <th>Motivo</th>
              <th>Justificativa</th>
            </tr>
          </thead>
          <tbody>
            <% if (faltas && faltas.length > 0) { %>
              <% faltas.forEach(function(falta) { %>
                <tr>
                  <td><%= falta.data_falta %></td>
                  <td><%= falta.motivo %></td>
                  <td><%= falta.justificativa %></td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="3">Nenhuma falta registrada.</td>
              </tr>
            <% } %>
          </tbody>
        </table>
        
        <div class="texto d-flex w-100">
          <h4>Total de Saídas:</h4>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"></script>
    <%- include('../../partials/footer') %>
  </body>

</html>