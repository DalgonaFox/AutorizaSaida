<!--Justificar Saída do Aluno-->
<!DOCTYPE html>
<html lang="pt-br">

<%- include('../../partials/head', { title: 'Justificar Saída' }) %>
  <%- include('../../partials/headerAluno', { activePage: '' }) %>

    <body class="background" style="background-image: url(../images/corredor_senai.png);">
      <div class="container">
        <div class="card w-75 shadow" style="padding: 40px;">
          <a href="/homeAluno" class="text-dark">
            <h3><i class="bi bi-arrow-left"></i></h3>
          </a>

          <h2 style="font-family: Inter; text-align: center; margin-bottom: 40px;">Justificar Saída com Atestado</h2>
          <p style="font-family: Inter; text-align: center; margin-bottom: 50px;">
            Selecione a saída antecipada anterior que deseja justificar, se desejar, insira uma observação e insira o
            seu arquivo digitalizado (pode ser uma foto ou um arquivo escaneado).
          </p>

          <form class='saida-form' action='/uploadSaida' method="POST" enctype="multipart/form-data">
            <input type="hidden" name="formType" value="justificarSaida">

            <div class='form-group'>
              <label for='checkboxes'>Data de Saída Antecipada</label>
              <% if (saida.length> 0) { %>
                <select class="form-select" name="cod_req" aria-label="Selecione a data"
                  style="color: black; width: 100%; height: 40px;">
                  <option selected>Selecione a data</option>
                  <% saida.forEach(function(item) { %>
                    <option value="<%= item.cod_req %>">
                      <%= new Date(item.data).toLocaleDateString('pt-BR') %>
                    </option>
                    <%= saida.data %>
                      <% }) %>
                </select>

                <% } else { %>
                  <select class="form-select" name="cod_req" aria-label="Não há saídas antecipadas para justificar!"
                    style="color: black; width: 100%; height: 40px;">
                    <option selected>Não há saídas antecipadas para justificar!</option>
                  </select>
                  <% } %>
            </div>


            <div class="form-group">
              <label for="observacoes">Observações</label>
              <textarea id="observacoes" name="observacoes" class="form-control"
                placeholder="Insira as observações que considerar necessárias..."></textarea>
            </div>

            <div class="form-group">
              <label for="exampleFormControlFile1">Faça upload do seu documento (apenas arquivos PDF serão
                aceitos.)</label>
              <input type="file" class="form-control-file" name="arquivo" required />
            </div>

            <div class="d-flex justify-content-between">
              <button type="reset" class="btn btn-gray btn-lg">Limpar</button>
              <button type="submit" class="btn btn-red btn-lg">Enviar</button>
            </div>
          </form>


        </div>
      </div>

      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
      <%- include('../../partials/footer') %>
    </body>

</html>