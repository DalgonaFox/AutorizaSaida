<!--Justificar Saída do Aluno-->

<!DOCTYPE html>
<html lang="pt-br">

<%- include('../../partials/head', { title: 'Justificar Saída' }) %>
<%- include('../../partials/headerAluno') %>

  <body class="background" style="background-image: url(../images/corredor_senai.png);">
    <div class="container">
      <div class="card w-75 shadow" style="padding: 40px;">
        <a href="/homeAluno" class="text-dark">
          <h3><i class="bi bi-arrow-left"></i></h3>
        </a>
  
        <h2 style="font-family: Inter; text-align: center; margin-bottom: 20px;">Justificar Saída com Atestado</h2>
        <p style="font-family: Inter; text-align: center; margin-bottom: 30px;">Preencha o formulário de acordo com as
          instruções a seguir.</p>
        <form class='saida-form' action=''>
          <div class='form-group'>
            <label for='checkboxes'>Turma</label>
            <select class="form-select w-100 h-50 text-dark" aria-label="Default select example">
              <option selected>Selecione a Turma</option>
              <option value="1">Turma 1</option>
              <option value="2">Turma 2</option>
              <option value="3">Turma 3</option>
            </select>
          </div>
          <div class='form-group'>
            <label for='checkboxes'>Data de Saída Antecipada</label>
            <select class="form-select" aria-label="Default select example"
              style=" color: black; width: 100%; height: 40px;">
              <option selected>Selecione a data </option>
              <option value="1">Data 1</option>
              <option value="2">Data 2</option>
              <option value="3">Data 3</option>
            </select>
          </div>
          <div class="form-group">
            <label for="observacoes">Observações</label>
            <textarea id="observacoes" name="observacoes" class="form-control"
              placeholder="Insira as observações que considerar necessárias..."></textarea>
          </div>
          <div class="form-group">
            <label for="exampleFormControlFile1">Faça upload do seu documento</label>
            <input type="file" class="form-control-file" id="exampleFormControlFile1">
          </div>
          <div class="d-flex justify-content-between">
            <button type="reset" class="btn btn-gray btn-lg">Limpar</button>
            <a href="/homeAluno" type="submit" class="btn btn-red btn-lg">Enviar</a>
          </div>
        </form>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"></script>
    <%- include('../../partials/footer') %>
  </body>

</html>