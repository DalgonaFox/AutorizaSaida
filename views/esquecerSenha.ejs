<!--Esqueceu a Senha-->
<!DOCTYPE html>
<html lang="pt-br">

<%- include('partials/head', { title: 'Mudar Senha' }) %>
<%- include('partials/headerNull', { activePage: '' }) %>

  <body>
    <div class="container">
      <div class="card shadow m-5 p-5 w-50 primeiro-acesso">
        <div class="form-container">
          <h2 class="font-italic font-weight-bold" style="font-family: Inter; text-align: center; margin-top: 15px;">Mude
            sua senha</h2>
          <form action="/mudarSenhaAluno" method="post" style="width: 100%; padding: 5%; position: center;">
            <div class="form-group wrapper">
              <label for="novaSenha">Nova Senha</label>
              <input type="password" class="form-control icon" id="password" name="nova_senha" placeholder="Nova senha">
            </div>
            <div class="form-group wrapper">
              <label for="novaSenha">Confirmação da Nova Senha</label>
              <input type="password" class="form-control icon" id="password" name="confirmacaoSenha" placeholder="Digite novamente sua nova senha">
            </div>
            <div class="justify-content-end d-flex">
   
             <button type="submit" class="btn btn-red btn-lg d-flex">Confirmar</button>
            </div>
  
          </form>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"></script>
    <%- include('partials/footer') %>
  </body>

</html>