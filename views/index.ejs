<!DOCTYPE html> 
<html lang="pt-br">
<%- include('partials/head', { title: 'Login' }) %>

<body class="login-background background">
    <!-- Modal -->
    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <form action="/esquecerSenha" method="POST">
                <div class="modal-content">
                    <div class="modal-header">
                    <h1 class="modal-title fs-5" id="staticBackdropLabel">Esqueci a Senha</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="formGroupExampleInput" class="form-label">Insira o e-mail da sua conta para recuperar a senha</label>
                            <input type="email" class="form-control" id="recuperarSenha" name="email" placeholder="E-mail de acesso" required />
                        </div>
                    </div>
                    <div class="modal-footer">
                    <button type="button" class="btn btn-red btn-lg">Enviar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="container">
        <div class="card p-5">
            <div>
                <div class="title">
                    <p>AutorizaSaida</p>
                </div>
                <div class="subtitle">
                    <p>Login</p>
                </div> 
            </div>

            <!-- Alerta de erro -->
            <% if (errorMessage) { %>
                <div class="alert alert-danger" role="alert">
                    <p><%= errorMessage %></p>
                </div>
            <% } %>

            <div class="inputLogin">
                <form action="/login" method="POST">
                    <div class="mb-3">
                        <label for="formGroupExampleInput" class="form-label">Usu√°rio</label>
                        <input type="text" class="form-control" id="formGroupExampleInput" name="aluno" placeholder="E-mail" required />
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Senha</label>
                        <input type="password" class="form-control" id="exampleInputPassword1" name="senha" placeholder="Insira sua senha" required />
                    </div>

                    <a class="text-dark" href="#" data-bs-toggle="modal" data-bs-target="#staticBackdrop" style="font-size: 14px;"><p><u>Esqueceu a senha?</u></p></a>

                    <div class="botoes d-flex justify-content-between">
                        <button type="submit" class="btn btn-red btn-lg">Entrar</button>
                    </div>
                </form>
            </div>
        </div> 
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>
</html>
